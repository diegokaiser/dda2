@{
    ViewBag.Title = "Chambix - Mis datos personales";
}

<section class="accounts">
    <div class="container">

        <div class="row">
            <div class="col d-none d-sm-none d-md-block d-lg-block d-xl-block"></div>
            <div class="col-xs-12 col-sm-10 accounts_body_posts">
                <h3 class="post_title">Mis datos personales</h3>
            </div>
            <div class="col d-none d-sm-none d-md-block d-lg-block d-xl-block"></div>
        </div>

        <div class="row">
            <div class="col d-none d-sm-none d-md-block d-lg-block d-xl-block"></div>
            <div class="col-xs-12 col-sm-10 accounts_body_form">
                <form action="/" method="post">
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <div class="form-group">
                                    <strong>Nombres</strong>
                                    <input class="form-control" type="text" name="name" value=" @ViewBag.UsuarioDatos.nombreUsuario" />
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-6">
                                <div class="form-group">
                                    <strong>Apellido</strong>
                                    <input class="form-control" type="text" name="name" value="@ViewBag.UsuarioDatos.apellidoUsuario" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <div class="form-group">
                                    <strong>Correo electrónico</strong>
                                    <input class="form-control" type="email" name="name" value="@ViewBag.UsuarioDatos.emailUsuario" />
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-6">
                                @Html.DropDownList("cboDistritos", (IEnumerable<SelectListItem>)ViewBag.ListarDistritos, htmlAttributes: new { @class = "form-select" })

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <div class="form-group">
                                    <strong>Número de celular</strong>
                                    <input class="form-control" type="type" name="name" value="@ViewBag.UsuarioDatos.cellUsuario" />
                                </div>
                            </div>
                            <div class="col-xs-12 col-md-6">
                                <div class="form-group">
                                    <strong>Ocupación</strong>
                                    <input class="form-control" type="type" name="name" value="@ViewBag.UsuarioDatos.ocupacionUsuario" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-6">
                                &nbsp;
                            </div>
                            <div class="col-6">
                                &nbsp;
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-md-6">
                                <div class="form-group">
                                    <input type="submit" class="btn btn-login" value="Guardar cambios" />
                                    @Html.ActionLink("Mis publicaciones", "Index", "Account", null, new { @class = "btn btn-outline-primary" })
                                </div>
                            </div>
                            <div class="col-6 d-none d-sm-block">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col d-none d-sm-none d-md-block d-lg-block d-xl-block"></div>
        </div>

    </div>
</section>