@model IEnumerable<WEB_Chambix.Models.tb_Servicio>

@{
    ViewBag.Title = "Servicios Chambix";
}

<style>
    .container h2.titulo {
        text-align: center;
        text-transform: uppercase;
        margin: 10px auto 50px;
    }

    .container .addCat {
        margin: 5px auto 30px;
    }

        .container .addCat > a {
            background-color: #FF5532;
            color: white;
            padding: 8px 12px;
            border-radius: 5px;
            text-decoration: none;
        }

            .container .addCat > a:hover {
                color: #000000;
            }

    table {
        border-collapse: collapse;
        width: 100%;
    }

        table thead {
            background-color: #287db5
        }


    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: aliceblue
    }

    tfoot tr td:last-child a {
        border-radius: 5px;
        padding: 5px 7px;
        color: #fff;
        text-decoration: none
    }

        tfoot tr td:last-child a:nth-child(1) {
            background-color: #3797da
        }

        tfoot tr td:last-child a:nth-child(2) {
            background-color: #00cdb3
        }

        tfoot tr td:last-child a:nth-child(3) {
            background-color: #e64d3e
        }


    th {
        color: white;
    }
</style>

<section class="posts">
    <div class="container">
        <h2 class="titulo">Servicios</h2>

        <div class="addCat">
            @Html.ActionLink("Agregar Nuevo Servicio", "Create")
        </div>
        <table class="table">
            <tr>
                <th>
                    Estado
                </th>
                <th>
                    Fecha de creacion
                </th>
                <th>
                    Actualizado por
                </th>
                <th>
                    Titulo post
                </th>
                <th>
                    Usuario
                </th>
                <th>
                    Acciones
                </th>
            </tr>
            <tfoot>
                @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.estadoServicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.create_at)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.update_by)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tb_Post.tituloPost)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tb_Usuario.nombreUsuario)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.idServicio }) |
                        @Html.ActionLink("Detilles", "Details", new { id = item.idServicio }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.idServicio })
                    </td>
                </tr>
            }
            </tfoot>
        </table>

    </div>
</section>

