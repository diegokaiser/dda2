@model WEB_Chambix.Models.tb_Categoria

@{

    ViewBag.Title = "Create";
}

<style>
    .btn {
        background-color: #FF5532;
        color: white;
        padding: 8px 12px;
        border-radius: 5px;
        text-decoration: none;
    }
        .btn:hover{
            background-color: #FF5532;
            color: #000000;
        }
    .btnreg a {
        background-color: #3797da;
        color: white;
        padding: 8px 12px;
        border-radius: 5px;
        text-decoration: none;
    }
    .btnreg:hover a {
       
        color: #000000;
    }
</style>

<section class="posts">
    <div class="container">
        <h2>Agregar Categoria</h2>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4></h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">

                @Html.LabelFor(model => model.nombreCategoria, "Nombre", htmlAttributes: new { @class = "control-label col-md-2" })

                <div class="col-md-10">
                    @Html.EditorFor(model => model.nombreCategoria, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nombreCategoria, "", new { @class = "text-danger" })
                </div>


            </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.create_at, "Fecha de creación", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.create_at, new { htmlAttributes = new { @class = "form-control", @type = "Date" } })
                        @Html.ValidationMessageFor(model => model.create_at, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.create_by, "Creado por", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.create_by, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.create_by, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.update_at, "Fecha de actualización", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.update_at, new { htmlAttributes = new { @class = "form-control", @type = "Date" } })
                        @Html.ValidationMessageFor(model => model.update_at, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.update_by, "Actualizado por", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.update_by, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.update_by, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Agregar" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div class="btnreg">
            @Html.ActionLink("Regresar", "Index")
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
