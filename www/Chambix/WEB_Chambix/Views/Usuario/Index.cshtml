@model IEnumerable<WEB_Chambix.Models.tb_Categoria>

@{
    ViewBag.Title = "Index";
}

<style>
    .container h2.titulo {
        text-align: center;
        text-transform: uppercase;
        margin: 10px auto 50px;
    }

    .container .addCat {
        margin: 5px auto 30px;
    }
        .container .addCat > a {
            background-color: #FF5532;
            color: white;
            padding: 8px 12px;
            border-radius: 5px;
            text-decoration: none;
        }
            .container .addCat > a:hover {
                color: #000000;
            }
    table {
        border-collapse: collapse;
        width: 100%;
    }

        table thead {
            background-color: #287db5
        }


    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: aliceblue
    }
    tfoot tr td:last-child a {
        border-radius: 5px;
        padding: 5px 7px;
        color: #fff;
        text-decoration: none
    }

    tfoot tr td:last-child a:nth-child(1) {
        background-color: #3797da
    }
    tfoot tr td:last-child a:nth-child(2) {
        background-color: #00cdb3
    }
    tfoot tr td:last-child a:nth-child(3) {
        background-color: #e64d3e
    }


    th {
        color: white;
    }
</style>

<section class="posts">
    <div class="container">
        <h2 class="titulo">Usuario</h2>

        <div class="addCat">
            @Html.ActionLink("Agregar Usuario", "Create")
        </div>
        <table class="table table-latitude">
            <thead>
            <th>
                Nombre
                @* @Html.DisplayNameFor(model => model.nombreUsuario)*@
            </th>
            <th>
                Fecha de creación
                @*  @Html.DisplayNameFor(model => model.create_at)*@
            </th>
            <th>
                Creado por
                @* @Html.DisplayNameFor(model => model.create_by)*@
            </th>
            <th>
                Fecha de actualizacion
                @* @Html.DisplayNameFor(model => model.update_at)*@
            </th>
            <th>
                Actualizado por
                @*@Html.DisplayNameFor(model => model.update_by)*@
            </th>
            <th>Accicones</th>
            </tr>
            </thead>
            <tfoot>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombreUsuario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.create_at)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.create_by)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.update_at)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.update_by)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.idUsuario }) |
                            @Html.ActionLink("Detalles", "Details", new { id = item.idUsuario }) |
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.idUsuario })
                        </td>
                    </tr>
                }
            </tfoot>
                

        </table>
    </div>
</section>




