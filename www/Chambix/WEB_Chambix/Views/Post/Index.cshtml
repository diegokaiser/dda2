<section class="posts">
    <div class="container">
        <div class="row">
            @foreach (var post in ViewBag.ListarPosts)
            {
                <div class="col-sm-12 col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <a href="#" class="card-title">
                                <h3>@post.tituloPost</h3>
                            </a>
                            <p class="card-text">
                                @post.descripcionPost
                            </p>
                            <div class="card-actions">
                                @Html.ActionLink("Me interesa", "Post", new { id = post.idPost }, htmlAttributes: new { @class = "btn btn-primary" })
                                <a href="#" class="btn btn-outline-primary">Precios y horarios</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>